  tag = 'div',
  logo = 'https://cdn.jsdelivr.net/gh/mcyzsx/picx-images-hosting@master/zsx/logo2.webp',
  title = 'ZSXã®å°ç«™',
  subtitle = 'ä¸“æ³¨äºå‰ç«¯å¼€å‘å’ŒæŠ€æœ¯åˆ†äº«',
  emojiTail = ['ğŸš€', 'ğŸ’»', 'ğŸ“', 'ğŸŒŸ'],
  showTitle = true,
} = Astro.props as BlogHeaderProps;

