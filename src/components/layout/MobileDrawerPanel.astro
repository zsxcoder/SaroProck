---
export interface Props {
  author: string;
  twitterHandle: string;
  githubUrl: string;
  telegramUrl: string;
  channelUrl: string;
  qqNumber: string;
  emailAddress: string;
  mastodonUrl: string;
}

const {
  author,
  twitterHandle,
  githubUrl,
  telegramUrl,
  channelUrl,
  qqNumber,
  emailAddress,
  mastodonUrl,
} = Astro.props;
---

<section class="space-y-5">
  <div class="bg-base-200/50 border border-base-content/10 rounded-2xl p-4 backdrop-blur-sm shadow-sm">
    <div class="flex items-center gap-3 mb-4">
        <div class="avatar">
          <div class="w-12 h-12 rounded-2xl ring-1 ring-primary/30 ring-offset-2 ring-offset-base-100 overflow-hidden">
            <img
              src="/avatar.webp"
              alt={`${author} avatar`}
              class="w-full h-full object-cover"
            />
          </div>
        </div>
        <div>
          <p class="text-sm uppercase tracking-wider text-base-content/50">
            Author
          </p>
          <h3 class="font-semibold text-base-content">{author}</h3>
          <p class="text-xs text-base-content/60">大三学生 · 博客写作者</p>
        </div>
      </div>
    <div class="flex gap-2 mt-3">
      <a
        href={`https://twitter.com/${twitterHandle.replace("@", "")}`}
        target="_blank"
        rel="noopener noreferrer"
        class="btn btn-sm btn-ghost flex-1 gap-2 rounded-xl"
        data-close-drawer="true"
      >
        <i class="ri-twitter-line text-lg" aria-hidden="true" />
        Twitter
      </a>
      <a
        href={githubUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="btn btn-sm btn-ghost flex-1 gap-2 rounded-xl"
        data-close-drawer="true"
      >
        <i class="ri-github-line text-lg" aria-hidden="true" />
        GitHub
      </a>
    </div>
    <a
      href={telegramUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="btn btn-primary btn-sm w-full mt-3 rounded-xl gap-2"
      data-close-drawer="true"
    >
      <i class="ri-telegram-line" aria-hidden="true" />
      Telegram
    </a>
  </div>

  <div class="bg-base-200/50 border border-base-content/10 rounded-2xl p-4 space-y-4 backdrop-blur-sm shadow-sm">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm font-semibold">我的频道</p>
        <p class="text-xs text-base-content/60">不定期推送灵感笔记</p>
      </div>
      <i class="ri-radar-line text-lg text-primary" aria-hidden="true" />
    </div>
    <a
      href={channelUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="flex items-center justify-between bg-base-100 rounded-2xl border border-base-content/10 px-4 py-3"
      data-close-drawer="true"
    >
      <span class="font-mono text-sm text-base-content/80 truncate">
        {channelUrl.replace(/^https?:\/\//, "")}
      </span>
      <i class="ri-external-link-line text-base-content/50" aria-hidden="true" />
    </a>
  </div>

  <div class="bg-base-200/50 border border-base-content/10 rounded-2xl p-4 space-y-3 backdrop-blur-sm shadow-sm">
    <div class="flex items-center gap-2 text-sm font-semibold">
      <i class="ri-user-shared-line text-primary" aria-hidden="true" />
      联系方式
    </div>
    <div class="flex items-center justify-between bg-base-100 rounded-2xl border border-base-content/10 px-4 py-3">
      <div class="flex items-center gap-2 text-sm">
        <i class="ri-qq-line text-base-content/70" aria-hidden="true" />
        QQ
      </div>
      <span class="font-mono text-sm text-base-content/80">
        {qqNumber}
      </span>
    </div>
    <a
      href={`mailto:${emailAddress}`}
      class="btn btn-outline btn-sm w-full rounded-xl gap-2"
      data-close-drawer="true"
    >
      <i class="ri-mail-send-line" aria-hidden="true" />
      发送邮件
    </a>
  </div>
</section>
