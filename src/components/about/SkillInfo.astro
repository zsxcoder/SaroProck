---
const skillsData = [
  { name: "HTML5", icon: "https://cdn.jsdelivr.net/npm/simple-icons@v12/icons/html5.svg", color: "#e34f26" },
  { name: "CSS3", icon: "https://cdn.jsdelivr.net/npm/simple-icons@v12/icons/css3.svg", color: "#1572b6" },
  { name: "JavaScript", icon: "https://cdn.jsdelivr.net/npm/simple-icons@v12/icons/javascript.svg", color: "#f7df1e" },
  { name: "TypeScript", icon: "https://cdn.jsdelivr.net/npm/simple-icons@v12/icons/typescript.svg", color: "#3178c6" },
  { name: "React", icon: "https://cdn.jsdelivr.net/npm/simple-icons@v12/icons/react.svg", color: "#61dafb" },
  { name: "Vue", icon: "https://cdn.jsdelivr.net/npm/simple-icons@v12/icons/vue-dot-js.svg", color: "#4fc08d" },
  { name: "Astro", icon: "https://cdn.jsdelivr.net/npm/simple-icons@v12/icons/astro.svg", color: "#ff5d01" },
  { name: "Tailwind CSS", icon: "https://cdn.jsdelivr.net/npm/simple-icons@v12/icons/tailwindcss.svg", color: "#38bdf8" },
  { name: "Node.js", icon: "https://cdn.jsdelivr.net/npm/simple-icons@v12/icons/node-dot-js.svg", color: "#339933" },
  { name: "Git", icon: "https://cdn.jsdelivr.net/npm/simple-icons@v12/icons/git.svg", color: "#f05032" },
  { name: "GitHub", icon: "https://cdn.jsdelivr.net/npm/simple-icons@v12/icons/github.svg", color: "#333333" },
  { name: "VS Code", icon: "https://cdn.jsdelivr.net/npm/simple-icons@v12/icons/visualstudiocode.svg", color: "#007acc" }
];
---

<div class="creativityMain author-content-item">
  <div class="author-content-item-tips">
    技能
  </div>
  <div class="author-content-item-list">
    {skillsData.map((item) => (
      <div class="cardInfo">
        <div class="creativityIcon" style={{ background: item.color }}>
          <img src={item.icon} alt={item.name} width="18" height="18" />
        </div>
        <div class="creativityTitle">
          {item.name}
        </div>
      </div>
    ))}
  </div>
</div>

<style scoped>
.creativityMain {
  display: flex;
  flex-direction: column;
  border-radius: 12px;
