<div class="create-site-post author-content-item single">
  <div class="author-content-item-tips">
    {singleData.tip}
  </div>
  <div class="author-content-item-title">
    {singleData.title}
  </div>
  <p class="author-content-item-content">
    {singleData.content}
  </p>
  <div class="lishi">
    {singleData.lishi}
  </div>
  <div class="singlePost">
