---
import type { CollectionEntry } from "astro:content";
import PostFooter from "@components/blog/PostFooter.astro";
import ShareButtons from "@components/blog/ShareButtons.astro";
import Comments from "@components/comments/Comments.astro";
import Figure from "@components/markdown/Figure.astro";
import ProseA from "@components/mdx/ProseA.astro";
import Badge from "@components/mdx/Badge.astro";
import BlogHeader from "@components/mdx/BlogHeader.astro";
import Blur from "@components/mdx/Blur.astro";
import Chat from "@components/mdx/Chat.astro";
import Folding from "@components/mdx/Folding.astro";
import LinkBanner from "@components/mdx/LinkBanner.astro";
import Quote from "@components/mdx/Quote.astro";
import Layout from "@layouts/Layout.astro";
import BlogLikeButton from "@/components/blog/LikeButton";
import ViewTracker from "@/components/blog/ViewTracker";
import { getAllPostsWithShortLinks } from "@/lib/blog";
import dayjs from "@/lib/telegram/dayjs-setup";

export const prerender = true;

export async function getStaticPaths() {
  const allPosts = await getAllPostsWithShortLinks(Astro.site!);
  return allPosts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

interface Props {
  post: CollectionEntry<"blog"> & { shortLink: string | null; longUrl: string };
}
const { post } = Astro.props;
const { Content, headings } = await post.render();
const { title, description, pubDate, updated, image } = post.data;

const author = "钟神秀";
// --- 预计阅读时间计算 ---
// 中文阅读速度（字/分钟）
const chineseWPM = 300;
// 英文阅读速度（单词/分钟）
const englishWPM = 200;

// 移除 Markdown 格式，获得更纯净的文本内容
const plainText = post.body.replace(/^---[\s\S]*?\n---\s*\n/, ""); // 移除 frontmatter

// 匹配中文字符
const chineseChars = (plainText.match(/[\u4e00-\u9fa5]/g) || []).length;
// 匹配英文单词（包括带连字符的单词）
const englishWords = (plainText.match(/[a-zA-Z0-9'-]+/g) || []).length;

// 分别计算阅读时间，然后相加
const chineseMinutes = chineseChars / chineseWPM;
const englishMinutes = englishWords / englishWPM;
const totalMinutes = Math.ceil(chineseMinutes + englishMinutes);

// 最终显示的字数和阅读时间
const words = chineseChars + englishWords;
const readTime = `预计阅读 ${totalMinutes} 分钟`;

const shareUrl = post.shortLink || post.longUrl;

const ogImageUrl = `/og/${post.slug}.png`;

const customComponents = {
  img: Figure,
  ProseA: ProseA,
  Badge: Badge,
  BlogHeader: BlogHeader,
  Blur: Blur,
  Chat: Chat,
  Folding: Folding,
  LinkBanner: LinkBanner,
  Quote: Quote,
};
---

<Layout
  title={title}
  description={description}
  image={ogImageUrl}
  headings={headings}
>
  <article class="max-w-4xl mx-auto">
    <ViewTracker client:only="react" slug={post.slug} />
    <header class="mb-12 animate-fade-in">
      {
        image && (
          <div class="relative aspect-[21/9] overflow-hidden rounded-3xl mb-8 shadow-2xl">
            <img
              src={image}
              alt={title}
              class="w-full h-full object-cover transition-transform duration-700 hover:scale-105"
              loading="eager"
            />
            <div class="absolute inset-0 bg-linear-to-t from-black/20 to-transparent" />
          </div>
        )
      }

      <div class="space-y-6 no-print">
        <h1
          class="text-3xl md:text-4xl lg:text-5xl font-bold text-base-content leading-tight"
        >
          {title}
        </h1>
        <p class="text-sm md:text-mx text-base-content/70 leading-relaxed">
          {description}
        </p>

        <div
          class="flex flex-col sm:flex-row sm:items-center gap-6 p-6 bg-base-200/50 rounded-2xl border border-base-content/5"
        >
          <div class="flex items-center gap-4">
            <div
              class="w-12 h-12 rounded-full ring-2 ring-primary/20 ring-offset-2 ring-offset-base-100"
            >
              <img
                src="/avatar.webp"
                class="w-full h-full rounded-full object-cover"
                alt={author}
              />
            </div>
            <div class="flex flex-col">
              <span class="font-semibold text-base-content">{author}</span>
              <span class="text-sm text-base-content/60">大学牛马</span>
            </div>
          </div>

          <div class="hidden sm:block w-px h-8 bg-base-content/20"></div>

          <div class="flex flex-wrap gap-4 text-sm text-base-content/60">
            <div class="flex items-center gap-2">
              <i class="ri-calendar-line"></i>
              <span>{dayjs(pubDate).format("YYYY年MM月DD日")}</span>
            </div>
            {
              updated && (
                <div class="flex items-center gap-2">
                  <i class="ri-refresh-line" />
                  <span>更新于 {dayjs(updated).format("MM月DD日")}</span>
                </div>
              )
            }
            <div class="flex items-center gap-2">
              <i class="ri-time-line"></i>
              <span>{readTime}</span>
            </div>
            <div class="flex items-center gap-2">
              <i class="ri-book-open-line"></i>
              <span>{words} 字</span>
            </div>
          </div>
        </div>
      </div>
    </header>

    <main class="mb-12 animate-fade-in" style="animation-delay: 0.2s;">
      <div
        class="bg-base-200/40 backdrop-blur-sm rounded-2xl p-6 md:p-8 lg:p-12 shadow-sm border border-base-content/5"
      >
        <div class="prose max-w-none">
          <Content components={customComponents} />
        </div>
      </div>
    </main>

    <script>
      import mediumZoom from 'medium-zoom';
      
      // 初始化 medium-zoom，选择所有带有 data-zoom-alt 属性的图片
      const zoom = mediumZoom('[data-zoom-alt]', {
        margin: 24,
        background: 'rgba(0, 0, 0, 0.8)',
        zoomMargin: 0
      });
      
      // 当图片被放大时，添加标题
      zoom.on('open', (event) => {
        const zoomedElement = event.target;
        const caption = zoomedElement.getAttribute('data-zoom-alt');
        
        if (caption) {
          // 获取 medium-zoom 创建的覆盖层
          const overlay = document.querySelector('.medium-zoom-overlay');
          
          // 创建标题元素
          const captionElement = document.createElement('div');
          captionElement.className = 'medium-zoom-caption';
          captionElement.textContent = caption;
          
          // 将标题添加到覆盖层（确保覆盖层存在）
          if (overlay) {
            overlay.appendChild(captionElement);
          }
        }
      });
      
      // 当图片被缩小关闭时，移除标题
      zoom.on('close', () => {
        const caption = document.querySelector('.medium-zoom-caption');
        if (caption) {
          caption.remove();
        }
      });
    </script>

    <style>
      .medium-zoom-caption {
        position: absolute;
        bottom: 20px;
        left: 50%;
        transform: translateX(-50%);
        background-color: rgba(0, 0, 0, 0.8);
        color: white;
        padding: 8px 16px;
        border-radius: 4px;
        font-size: 0.875em;
        max-width: 80%;
        text-align: center;
        font-style: italic;
        z-index: 1050;
        pointer-events: none; /* 确保标题不影响图片交互 */
      }
      
      /* 确保覆盖层是相对定位，让标题可以绝对定位 */
      .medium-zoom-overlay {
        position: relative;
      }
    </style>

    <script is:inline>
      document.addEventListener("DOMContentLoaded", () => {
        // 处理脚注链接点击事件
        // 查找所有脚注链接，包括带有 ↩ 符号的链接
        document.querySelectorAll('a[href^="#"][href*="fn"]').forEach(link => {
          link.addEventListener('click', (e) => {
            e.preventDefault();
            const targetId = link.getAttribute('href');
            if (targetId) {
              const targetElement = document.querySelector(targetId);
              if (targetElement) {
                // 计算滚动位置，考虑固定头部的高度和额外的边距
                const targetRect = targetElement.getBoundingClientRect();
                
                // 根据链接类型调整滚动位置
                if (targetId.includes('fnref')) {
                  // 脚注到文章的链接
                  const targetTop = targetRect.top + window.scrollY - 150; // 增加偏移量，确保内容可见
                  window.scrollTo({
                    top: targetTop,
                    behavior: 'smooth'
                  });
                } else {
                  // 文章到脚注的链接
                  const targetTop = targetRect.top + window.scrollY - 100; // 适当调整偏移量
                  window.scrollTo({
                    top: targetTop,
                    behavior: 'smooth'
                  });
                }
              }
            }
          });
        });
      });
    </script>

    <section
      class="my-16 flex flex-col items-center justify-center gap-4 animate-fade-in no-print"
      style="animation-delay: 0.4s;"
    >
      <h3 class="text-xl font-bold text-base-content">觉得这篇文章怎么样？</h3>
      <p class="text-base-content/70 -mt-2">点个赞，让更多人看到！</p>
      <div class="mt-4">
        <BlogLikeButton client:load postId={post.slug} />
      </div>
    </section>

    <section
      class="mb-12 animate-fade-in no-print"
      style="animation-delay: 0.4s;"
    >
      <ShareButtons title={title} url={shareUrl} description={description} />
    </section>

    <footer
      class="mb-16 animate-fade-in no-print"
      style="animation-delay: 0.6s;"
    >
      <PostFooter post={post} author={author} />
    </footer>

    <section
      class="mb-16 animate-fade-in no-print"
      style="animation-delay: 1s;"
    >
      <Comments identifier={post.slug} commentType="blog" />
    </section>
  </article>
</Layout>
